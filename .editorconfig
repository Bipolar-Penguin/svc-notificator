root = true

[*]
# Set default charset
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Trim trailing whitespace
trim_trailing_whitespace = true

# Space indentation
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
